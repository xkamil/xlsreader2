<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<HBox maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.controller.SearchFragmentController">

    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>

    <ComboBox fx:id="cbMatchType" onAction="#onSelectMatchType" prefHeight="25.0" prefWidth="122.0" promptText="Match type" />

    <TextField fx:id="tvCellValue" promptText="Cell value..." HBox.hgrow="ALWAYS" />

    <Button mnemonicParsing="false"
            onAction="#clearFilter"
            text="X"
            style="-fx-background-color: indianred"/>

    <Button defaultButton="true" mnemonicParsing="false" onAction="#onSearch" text="Search" />

    <Button mnemonicParsing="false" onAction="#onLoadWorkbooks" text="Load workbooks" />
</HBox>
